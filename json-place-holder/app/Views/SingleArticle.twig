{% extends "Layout.twig" %}
{% block content %}
    <div class="dark:bg-black grid place-items-up place-items-center">
        <div class="h-56 content-normal">

            {% for post in posts %}

                <div class="w-full shadow-lg rounded-lg mb-6">

                    <figure class="dark:bg-slate-800 hover:bg-gray-100 dark:border-gray-700 dark:bg-gray-800 dark:hover:bg-gray-700
                        shadow-[0_35px_60px_-15px_rgba(0,0,0,0.3)] p-6 bg-white border border-gray-200 rounded-lg shadow
                        dark:bg-gray-800 dark:border-gray-700 ">
                        <article>

                            <header class="mb-4 lg:mb-6 not-format">
                                <address class="flex items-center mb-6 not-italic">
                                    <div class="inline-flex items-center mr-3 text-sm text-gray-900 dark:text-white">
                                        <div>

                                            <a href="{{ post.userUrl }}" rel="author"
                                               class="text-xl font-bold text-gray-900 dark:text-white">Author User
                                                ID:{{ post.userId }}</a>

                                        </div>
                                    </div>
                                </address>
                                <a href="{{ post.postUrl }}">
                                    <img src="https://placehold.co/600x400?text={{ post.title|capitalize }}"
                                         alt="post.title"></a>
                            </header>
                            <p class="lead">{{ post.body|capitalize }}</p>
                            <section class="not-format">
                            </section>
                            <br>
                            <form action="/delete/{{ post.id }}" method="post">
                                <button name="delete" value=""
                                        class="bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded">
                                    <span>Delete</span>
                                </button>
                            </form>
                            {% for comment in comments %}

                                <section class="not-format">
                                    <br>
                                </section>

                                <article class="p-6 mb-6 text-base bg-white rounded-lg dark:bg-gray-900">

                                    <footer class="flex justify-between items-center mb-2">

                                        <div class="flex items-center">

                                            <p class="inline-flex items-center mr-3 text-sm text-gray-900 dark:text-white">
                                                <img
                                                        class="mr-2 w-6 h-6 rounded-full"
                                                        src="https://180dc.org/wp-content/uploads/2022/04/Blank-Avatar.png"
                                                        alt="Michael Gough">{{ comment.name|capitalize }}</p>

                                        </div>

                                    </footer>

                                    <p>{{ comment.body|capitalize }}</p>

                                    <div class="flex items-center mt-4 space-x-4">

                                    </div>

                                </article>

                            {% endfor %}
                        </article>
                    </figure>

                </div>



            {% endfor %}

        </div>

    </div>



    </article>

    </div>

    </main>

{% endblock %}

