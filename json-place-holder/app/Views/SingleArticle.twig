{% extends "Layout.twig" %}
{% block content %}
    {% for post in posts %}


        <main class="pt-8 pb-16 lg:pt-16 lg:pb-24 bg-white">

        <div class="flex justify-between px-4 mx-auto max-w-screen-xl ">

        <article

        class="mx-auto w-full max-w-2xl format format-sm sm:format-base lg:format-lg format-blue dark:format-invert">

        <header class="mb-4 lg:mb-6 not-format">

            <address class="flex items-center mb-6 not-italic">

                <div class="inline-flex items-center mr-3 text-sm text-gray-900 dark:text-white">
                    <div>

                        <a href="{{ post.userUrl }}" rel="author"
                           class="text-xl font-bold text-gray-900 dark:text-white">Author User
                            ID:{{ post.userId }}</a>

                    </div>
                </div>

            </address>

            <a href="{{ post.postUrl }}">
                <img src="https://placehold.co/600x400?text={{ post.title|capitalize }}"
                     alt="{{ post.title|capitalize }}"></a>

        </header>
        <p>{{ post.id }}
        <p class="lead">{{ post.body|capitalize }}</p>
        <form action="/delete/{{ post.id }}" method="post">
            <button name="delete" value=""
                    class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full">
                <span>Delete</span>
            </button>
        </form>
    {% endfor %}

    {% for comment in comments %}

        <section class="not-format">

        </section>

        <article class="p-6 mb-6 text-base bg-white rounded-lg dark:bg-gray-900">

            <footer class="flex justify-between items-center mb-2">

                <div class="flex items-center">

                    <p class="inline-flex items-center mr-3 text-sm text-gray-900 dark:text-white"><img
                                class="mr-2 w-6 h-6 rounded-full"
                                src="https://180dc.org/wp-content/uploads/2022/04/Blank-Avatar.png"
                                alt="Michael Gough">{{ comment.name|capitalize }}</p>
                </div>

            </footer>

            <p>{{ comment.body|capitalize }}</p>

            <div class="flex items-center mt-4 space-x-4">

            </div>

        </article>

    {% endfor %}

    </article>

    </div>

    </main>

{% endblock %}



